<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <LinearLayout
        android:id="@+id/ll_cities_chooser_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <com.opensource.wheel.WheelView
            android:id="@+id/wv_cities_chooser_provices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>
        <com.opensource.wheel.WheelView
            android:id="@+id/wv_cities_chooser_cities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ll_cities_chooser_content"
        android:layout_alignBottom="@+id/ll_cities_chooser_content"
        android:orientation="horizontal" >
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"/>
        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/dark_gray_88" />
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>
    </LinearLayout>
</RelativeLayout>